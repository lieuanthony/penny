  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend: ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "Frontend: Start",
      "url": "http://localhost:4200/"
    },
    {
      "name": "Frontend: ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "Frontend: Test",
      "url": "http://localhost:9876/debug.html"
    },
    {
      "name": "Backend: Spring Boot",
      "type": "java",
      "request": "launch",
      "mainClass": "com.penny.backend.PennyBackendApplication",
      "projectName": "penny-backend",
      "cwd": "${workspaceFolder}/penny-backend"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Frontend + Backend",
      "configurations": [
        "Backend: Spring Boot",
        "Frontend: ng serve"
      ],
      "stopAll": true
    }
  ]
}
