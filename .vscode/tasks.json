{
  // For more information, visit: https://go.microsoft.com/fwlink/\?LinkId\=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Start",
      "type": "npm",
      "script": "start",
      "path": "penny-frontend/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "Frontend: Test",
      "type": "npm",
      "script": "test",
      "path": "penny-frontend/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "Frontend: Build",
      "type": "npm",
      "script": "build",
      "path": "penny-frontend/",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Backend: Run",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/penny-backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend: Test",
      "type": "shell",
      "command": "./mvnw",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/penny-backend"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
